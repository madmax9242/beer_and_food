<p id="notice"><%= notice %></p>

<h2>Listing Pairs</h2>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Beer</th>
      <th>Beer type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pairs.each do |pair| %>
      <tr>
        <td><%= pair.food %></td>
        <td><%= pair.beer %></td>
        <td><%= pair.beer_type %></td>
        <td><%= link_to 'Show', pair %></td>
        <td><%= link_to 'Edit', edit_pair_path(pair) %></td>
        <td><%= link_to 'Destroy', pair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="pair-view" class="pair"></div>

<br>

<%= link_to 'New Pair', new_pair_path %>
